<FormDelete@Popup>:
    size_hint: 0.85, 0.4
    auto_dismiss: True
    title: 'Delete Aphorism'
    MyBoxLayout:
        padding: 3
        AnchorLayout:
            id: form
            anchor_x: 'center'
            anchor_y: 'top'
            orientation: "vertical"
            WidgetDeleteLabel:
                id: aphorism_text
        MyGridLayout:
            size_hint_y: 0.3
            cols: 2
            rows: 1
            MyButton:
                id: submit
                size_hint_x: 0.7
                text: 'Delete Aphorism'
                on_release: root.delete_action()
            MyButton:
                size_hint_x: 0.3
                text: 'Cancel'
                on_release: root.dismiss()

<WidgetDeleteLabel@Label>:
    size_hint_y: None
    size: self.texture_size
    text_size: root.width, None
    padding_y: 10
    halign: 'left'
    valign: 'middle'
    markup: True
