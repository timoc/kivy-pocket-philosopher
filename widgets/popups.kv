<Notify@BoxLayout>:
    orientation: "horizontal"
    size_hint_x: 0.75
    size_hint_y: 0.15
    on_release: self.parent.remove_widget(self)
    canvas.before:
        Color:
            rgba: .0, .0, .0, .7
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        Image:
            size_hint_x: 0.15
            source: root.icon
        MyLabel:
            id: msg
            size_hint_x: 0.85
            text: root.msg
            halign: 'left'
            valign: 'middle'
            markup: True
            text_size: app.root.width, None
            size: self.texture_size

<WidgetAbout@Popup>:
    size_hint: 0.85, 0.85
    title: 'About'
    BoxLayout:
        orientation: "vertical"
        MyBoxLayout:
            id: rst_doc
        MyButton:
            size_hint_y: 0.15
            text: 'Ok'
            on_release: root.dismiss()

<WidgetHelp@Popup>:
    size_hint: 0.85, 0.75
    title: 'Help'
    BoxLayout:
        orientation: "vertical"
        MyBoxLayout:
            id: rst_doc
        MyButton:
            size_hint_y: 0.2
            text: 'Ok'
            on_release: root.dismiss()

<WidgetCopy@Popup>:
    size_hint: 0.75, 0.4
    title: 'Copy Aphorism'
    textarea_copy: copytext
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: 0.5
            orientation: "vertical"
            FormTextArea:
                id: copytext
                size_hint_y: 0.6
                size: (self.parent.width, '72dp')
                markup: False
                font_name: 'assets/fonts/ubuntu/UbuntuMono-R.ttf'
            MyButton:
                size_hint_y: 0.2
                text: 'Copy'
                on_release: root.dismiss()
