<WidgetAphorism>:
    id: aphorism_box
    FloatLayout:
        Image:
            id: background
            pos: (0,root.height - self.height)
            auto_bring_to_front: False
            keep_ratio: True
            allow_stretch: True
    MyBoxLayout:
        FloatLayout:
            size_hint: None, None
            size: quote.size
            Label:
                pos: (0, aphorism_rnd.height)
                id: quote
                text_size: root.width, None
                size: self.texture_size
                padding: ('20dp', '20dp')
                valign: 'middle'
                font_name: 'assets/fonts/roboto/RobotoSlab-Bold.ttf'
                font_size: root.height / 18
                markup: True
                canvas.before:
                    Color:
                        rgba: get_random_color(0.3)
                    Rectangle:
                        pos: self.pos
                        size: self.size
        FloatLayout:
            size_hint: None, None
            size: aphorism_copy.size
            ImageClickable:
                id: aphorism_copy
                pos: (aphorism_box.width - 100, aphorism_box.height - 100)
                source: 'assets/img/icons/medium_copy.png'
                source_up: 'assets/img/icons/medium_copy.png'
                source_down: 'assets/img/icons/medium_copy.png'
                on_release: app.aphorism_copy()
        MyButton:
            size_hint_y: None
            height: '100sp'
            id: aphorism_rnd
            text: 'Random'
            font_size: '50sp'
            on_release: app.aphorism_random()
