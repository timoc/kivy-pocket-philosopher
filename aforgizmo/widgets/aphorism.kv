<WidgetAphorism@MyScreenManager>:
    id: aphorism_box
    FloatLayout:
        Scatter:
            size_hint: None, None
            size: quote.size
            Label:
                id: quote
                pos: (0, 0 + aphorism_rnd.height)
                text_size: aphorism_box.width, None
                size: self.texture_size
                font_size: '26sp'
                padding_y: ('20sp')
                valign: 'middle'
                font_name: 'assets/fonts/roboto/RobotoSlab-Bold.ttf'
                markup: True
                canvas.before:
                    Color:
                        rgba: get_random_color(0.4)
                    Rectangle:
                        pos: self.pos
                        size: self.size
        FloatLayout:
            size_hint: None, None
            size: aphorism_copy.size
            ImageClickable:
                id: aphorism_copy
                pos: (aphorism_box.width - 100, aphorism_box.height - 100)
                source: 'assets/img/icons/copy_up.png'
                source_up: 'assets/img/icons/copy_up.png'
                source_down: 'assets/img/icons/copy_down.png'
                on_release: app.aphorism_copy()
                opacity: 0.2

    MyButton:
        id: aphorism_btn
        size_hint_y: None
        height: '100sp'
        background_normal: app.pixel
        background_down: app.pixel
        on_press: aphorism_rnd.source = 'assets/img/icons/refresh_down.png'
        on_release: app.aphorism_random()
        FloatLayout:
            size_hint: None, None
            size: aphorism_rnd.size
            Image:
                auto_bring_to_front: False
                id: aphorism_rnd
                pos: ((aphorism_box.width / 2) - self.width/2, 0)
                source: 'assets/img/icons/refresh_up.png'
