<WidgetAphorism>:
    id: aphorism_box
    FloatLayout:
        Image:
            id: background
            pos: (0,root.height - self.height)
            auto_bring_to_front: False
            keep_ratio: False
            allow_stretch: True
        FloatLayout:
            size_hint: None, None
            size: quote.size
            Label:
                id: quote
                pos: (0, aphorism_rnd.height)
                text_size: root.width, None
                size: self.texture_size
                font_size: '24sp'
                valign: 'middle'
                font_name: 'assets/fonts/roboto/RobotoSlab-Bold.ttf'
                markup: True
                canvas.before:
                    Color:
                        rgba: get_random_color(0.3)
                    Rectangle:
                        pos: self.pos
                        size: self.size
        FloatLayout:
            size_hint: None, None
            size: aphorism_copy.size
            ImageClickable:
                id: aphorism_copy
                pos: (aphorism_box.width - 100, aphorism_box.height - 100)
                source: 'assets/img/icons/copy_up.png'
                source_up: 'assets/img/icons/copy_up.png'
                source_down: 'assets/img/icons/copy_down.png'
                on_release: app.aphorism_copy()
    MyButton:
        id: aphorism_btn
        size_hint_y: None
        height: '100sp'
        on_press: aphorism_rnd.source = 'assets/img/icons/refresh_down.png'
        on_release: app.aphorism_random()
        FloatLayout:
            size_hint: None, None
            size: aphorism_rnd.size
            Image:
                auto_bring_to_front: False
                id: aphorism_rnd
                pos: ((aphorism_box.width / 2) - self.width/2, 0)
                source: 'assets/img/icons/refresh_up.png'
