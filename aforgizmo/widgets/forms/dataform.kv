<DataForm@MyBoxLayout>:
    MyButton:
        size_hint_y: 0.1
        text: 'Download Backgrounds'
        on_release: app.form_download_backgrounds()
    MyBoxLayout:
        size_hint_y: 0.1
        orientation: 'horizontal'
        MyButton:
            text: 'Import Data (File)'
            on_release: app.form_import()
        MyButton:
            text: 'Import Data (Web)'
            on_release: app.form_import_url()
    MyBoxLayout:
        size_hint_y: 0.1
        orientation: 'horizontal'
        MyButton:
            text: 'Backup Database'
            on_release: app.form_backup()
        MyButton:
            text: 'Clear Database'
            on_release: app.form_wipe()
