<FormNew@Popup>:
    size_hint: 0.9, 0.6
    auto_dismiss: False
    title: 'Add New Aphorism'
    MyBoxLayout:
        padding: 3
        MyBoxLayout:
            id: form
            FormTextArea:
                id: aphorism
                focus: True
                max_chars: 4096
                size_hint_y: 0.4
            FormLabel:
                text: 'Author:'
            FormTextInput:
                id: author
            FormLabel:
                text: 'From:'
            FormTextInput:
                id: source
            FormLabel:
                text: 'Tags: (Space-separated, use: a-z 0-9 _)'
            FormTextArea:
                id: tags
                valid_chars: 'a-z0-9_\s'
                max_chars: 1024
                size_hint_y: 0.2
                size: (self.parent.width, '72dp')
        MyGridLayout:
            cols: 2
            rows: 1
            size_hint_y: 0.2
            MyButton:
                id: submit
                size_hint_x: 0.7
                text: 'Add Aphorism'
                on_release: root.new()
            MyButton:
                size_hint_x: 0.3
                text: 'Cancel'
                on_release: root.dismiss()
