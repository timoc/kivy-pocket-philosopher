<FormNew@Popup>:
    size_hint: 0.8, 0.8
    auto_dismiss: False
    title: 'Add New Aphorism'
    BoxLayout:
        orientation: "vertical"
        padding: 3
        BoxLayout:
            id: form
            orientation: "vertical"
            FormLabel:
                text: 'Aphorism:'
            FormTextArea:
                id: aphorism
                max_chars: 4096
                size_hint_y: 0.8
            FormLabel:
                text: 'Author:'
            FormTextInput:
                id: author
                focus: True
            FormLabel:
                text: 'Source:'
            FormTextInput:
                id: source
            FormLabel:
                text: 'Tags: (Space-separated, use: a-z 0-9 _)'
            FormTextArea:
                id: tags
                valid_chars: 'a-z0-9_\s'
                max_chars: 1024
                size_hint_y: 0.2
                size: (self.parent.width, '72dp')
        GridLayout:
            size_hint_y: 0.1
            cols: 2
            rows: 1
            spacing: 2
            size_hint_y: 0.1
            MyButton:
                id: submit
                size_hint_x: 0.7
                text: 'Add Aphorism'
                on_press: root.new()
            MyButton:
                size_hint_x: 0.3
                text: 'Cancel'
                on_press: root.cancel()
