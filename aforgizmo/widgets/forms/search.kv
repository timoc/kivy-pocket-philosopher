<FormSearch>:
    search_input: search_box
    results: results
    MyBoxLayout:
        MyBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            size: (self.parent.width, '40dp')
            Image:
                size_hint_x: None
                width: '32dp'
                height: root.height
                keep_ratio: True
                allow_stretch: True
                source: 'assets/img/icons/search.png'
            FormTextInput:
                id: search_box
            MyButton:
                id: search_submit
                size_hint_x: None
                width: '120dp'
                text: 'Go!'
                on_press: root.search(text = search_box.text)
        ListView:
            id: results
            adapter:
                SimpleListAdapter(
                data = [],
                args_converter = root.args_converter,
                cls = root.ButtonSearchResults)

<ButtonSearchResults@MyListItemButton>:
    on_press: app.aphorism_show(self.aphorism[0])
