<FormBackup@Popup>:
    size_hint: 0.85, 0.85
    auto_dismiss: True
    title: 'Backup Database'
    MyBoxLayout:
        MyLabel:
            size_hint_y: 0.1
            text: "This will backup your database to the folder you choose, named as [b]aphorisms-[i]DATE[/i].json[/b].  Please select the backup folder to save into:"
        FileChooserListView:
            size_hint_y: 0.8
            id: filechooser
            path: app.data_folder + '/..'
            dirselect: True
            filters: '[!*]'
        MyGridLayout:
            size_hint_y: 0.1
            cols: 2
            rows: 1
            orientation: "horizontal"
            MyButton:
                text: '[b]Backup[/b]'
                on_release: root.backup(filechooser.path, filechooser.selection)
            MyButton:
                text: 'Cancel'
                on_press: root.dismiss()
