<FormEdit@Popup>:
    size_hint: 0.8, 0.6
    auto_dismiss: False
    title: 'Edit Aphorism'
    MyBoxLayout:
        padding: 3
        MyBoxLayout:
            id: form
            FormLabel:
                text: 'Aphorism:'
            FormTextArea:
                id: aphorism
                focus: True
                max_chars: 4096
                size_hint_y: 0.5
            FormLabel:
                text: 'Author:'
            FormTextInput:
                id: author
            FormLabel:
                text: 'Source:'
            FormTextInput:
                id: source
            FormLabel:
                text: 'Tags: (Space-separated, use: a-z 0-9 _)'
            FormTextArea:
                id: tags
                valid_chars: 'a-z0-9_\s'
                max_chars: 1024
                size_hint_y: 0.2
                size: (self.parent.width, '72dp')
        MyGridLayout:
            size_hint_y: 0.1
            cols: 2
            rows: 1
            MyButton:
                id: submit
                size_hint_x: 0.7
                text: 'Update Aphorism'
                on_release: root.edit_action()
            MyButton:
                size_hint_x: 0.3
                text: 'Cancel'
                on_release: root.dismiss()
