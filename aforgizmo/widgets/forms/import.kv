<FormImport@Popup>:
    size_hint: 0.85, 0.85
    auto_dismiss: True
    title: 'Import Database'
    MyBoxLayout:
        MyLabel:
            size_hint_y: 0.1
            text: "This will import a previously backed up database."
        FileChooserListView:
            size_hint_y: 0.8
            id: filechooser
            path: app.data_folder
            filters: ['*.json']
        MyGridLayout:
            size_hint_y: 0.1
            cols: 2
            rows: 1
            orientation: "horizontal"
            MyButton:
                text: '[b]Restore Data[/b]'
                on_release: root.restore(filechooser.path, filechooser.selection)
            MyButton:
                text: 'Cancel'
                on_release: root.dismiss()
