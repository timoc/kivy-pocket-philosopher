<FormList>:
    orientation: "vertical"
    spacing: 1
    results: results_list
#    MyButton:
#        size_hint_y: 0.1
#        height: '64dp'
#        text: 'Reload Aphorisms'
#        on_press: root.list(); app.root.select_list_id = None
    ListView:
        id: results_list
        adapter:
            ListAdapter(
            data = [],
            selection_mode = 'single',
            args_converter = root.args_converter,
            cls = main.ButtonListResults)
    MyGridLayout:
        size_hint_y: 0.2
        cols: 3
        rows: 2
        MyButton:
            height: '64dp'
            text: 'View'
            on_press: app.root.aphorism_display_by_id(app.root.select_list_id)
        MyButton:
            height: '64dp'
            text: 'Edit'
            on_press: root.edit()
        MyButton:
            height: '64dp'
            text: 'Delete'
            on_press: root.delete()
        MyButton:
            height: '64dp'
            text: 'Backup'
            on_press: root.db_backup()
        MyButton:
            height: '64dp'
            text: 'Import'
            on_press: root.db_import()
        MyButton:
            height: '64dp'
            text: 'Reset!'
            on_press: root.reset()

<ButtonListResults@ListItemButton>:
    size_hint_y: None
    height: self.font_size * 3
    padding_y: 10
    halign: 'left'
    valign: 'middle'
    text_size: root.width, None
    text: "{}".format(self.aphorism[1])
    on_press: root.pressed(self.aphorism[0]); app.root.select_list_id = self.aphorism[0]
    markup: False
