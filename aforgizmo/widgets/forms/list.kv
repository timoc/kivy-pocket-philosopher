<FormListActions@MyGridLayout>:
    cols: 3
    rows: 2
    MyButton:
        height: '64dp'
        text: 'View'
        on_press: app.aphorism_show(app.selected_id)
    MyButton:
        height: '64dp'
        text: 'Edit'
        on_press: app.aphorism_edit()
    MyButton:
        height: '64dp'
        text: 'Delete'
        on_press: app.aphorism_delete()

<FormList>:
    orientation: "vertical"
    results: results
    ListView:
        size_hint_y: 0.9
        id: results
        adapter:
            ListAdapter(
            data = [],
            selection_mode = 'single',
            args_converter = root.args_converter,
            cls = root.ButtonListResults)
    FormListActions:
        size_hint_y: 0.1

<ButtonListResults@ListItemButton>:
    size_hint_y: None
    height: self.font_size * 3
    padding_y: 10
    halign: 'left'
    valign: 'middle'
    text_size: root.width, None
    text: "{}".format(self.aphorism[1])
    on_press: root.pressed(self.aphorism[0])
    markup: False

