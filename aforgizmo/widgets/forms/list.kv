<FormListActions@MyGridLayout>:
    cols: 3
    rows: 2
    MyButton:
        height: '64dp'
        text: 'View'
        on_release: app.aphorism_show(app.selected_id)
    MyButton:
        height: '64dp'
        text: 'Edit'
        on_release: app.aphorism_edit()
    MyButton:
        height: '64dp'
        text: 'Delete'
        on_release: app.aphorism_delete()

<FormList>:
    orientation: "vertical"
    results: results
    ListView:
        size_hint_y: 0.9
        id: results
        adapter:
            ListAdapter(
            data = [],
            selection_mode = 'single',
            args_converter = root.args_converter,
            cls = root.ButtonListResults)
    BoxLayout:
        size_hint_y: 0.1
        id: form_list_actions

<ButtonListResults@MyListItemButton>:
    on_press: root.pressed(self.aphorism[0])
