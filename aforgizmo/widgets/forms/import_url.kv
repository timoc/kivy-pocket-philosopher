<FormImportUrl@Popup>:
    size_hint: 0.85, 0.4
    auto_dismiss: True
    title: 'Import Images'
    MyBoxLayout:
        MyLabel:
            size_hint_y: 0.1
            text: "This will import a database from a Web URL."
        FormLabel:
            text: 'URL:'
        FormTextArea:
            id: url
            valid_chars: 'a-z0-9_\s'
            max_chars: 1024
            size_hint_y: 0.2
            size: (self.parent.width, '72dp')
            text: 'http://www.urunu.com/data/aphorisms.json'
        MyBoxLayout:
            size_hint_y: 0.1
            cols: 2
            rows: 1
            orientation: "horizontal"
            MyButton:
                text: '[b]Import Data[/b]'
                on_release: root.import_url(root.ids.url.text)
            MyButton:
                text: 'Cancel'
                on_release: root.dismiss()
