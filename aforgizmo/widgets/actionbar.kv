<ActionBarMain@ActionBar>
    pos_hint: {'top':1}
    ActionView:
        ActionPrevious:
            with_previous: False
            text: 'Pocket Philosopher'
            on_press: app.root.current = 'Main'
        ActionButton:
            text: "Search"
            icon: 'assets/img/icons/search.png'
            on_press: app.root.current = 'Search'; app.root.ids.FormSearch.ids.search_box.focus = True
        ActionButton:
            text: "Edit Aphorisms"
            icon: 'assets/img/icons/edit.png'
            on_press: app.root.current = 'List'; app.root.ids.FormList.list()
        ActionButton:
            text: "Add"
            icon: 'assets/img/icons/new.png'
            on_press: app.aphorism_new()
        ActionButton:
            text: "Data"
            icon: 'assets/img/icons/import_export.png'
            on_press: app.root.current = 'Backup'
        ActionButton:
            id: btn_settings
            text: "Settings"
            icon: 'assets/img/icons/settings.png'
            on_press: app.open_settings()
        ActionButton:
            text: "Help"
            icon: 'assets/img/icons/help.png'
            on_press: app.help()
        ActionButton:
            text: "About"
            icon: 'assets/img/icons/about.png'
            on_press: app.about()
        ActionButton:
            icon: 'assets/img/icons/quit.png'
            text: "Exit"
            on_press: app.stop()
