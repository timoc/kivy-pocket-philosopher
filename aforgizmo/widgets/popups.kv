<WidgetAbout>:
    size_hint: 0.9, 0.9
    title: 'About'
    BoxLayout:
        orientation: "vertical"
        RstDocument:
            source: 'docs/ABOUT.rst'
        MyButton:
            size_hint_y: None
            text: 'OK'
            on_press: root.dismiss()

<WidgetHelp>:
    size_hint: 0.9, 0.9
    title: 'Help'
    BoxLayout:
        orientation: "vertical"
        RstDocument:
            source: 'docs/HELP.rst'
        MyButton:
            size_hint_y: None
            text: 'OK'
            height: '64dp'
            on_press: root.dismiss()

<WidgetCopy>:
    size_hint: 0.75, 0.75
    title: 'Copy Aphorism'
    textarea_copy: copytext
    BoxLayout:
        orientation: "vertical"
        FormLabel:
            size_hint_y: 0.1
            text: 'If the copy button fails, try to directly copy the text below.'
        FormTextArea:
            id: copytext
            size_hint_y: 0.8
            size: (self.parent.width, '72dp')
            markup: False
            focus: True
            font_name: 'assets/fonts/ubuntu/UbuntuMono-R.ttf'
        MyButton:
            size_hint_y: None
            text: 'Copy'
            on_press: root.dismiss()
