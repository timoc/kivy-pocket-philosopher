<Notify@BoxLayout>:
    orientation: "horizontal"
    size_hint_x: 0.75
    size_hint_y: 0.15
    on_release: self.parent.remove_widget(self)
    canvas.before:
        Color:
            rgba: .0, .0, .0, .7
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        Image:
            size_hint_x: 0.15
            source: root.icon
        MyLabel:
            id: msg
            size_hint_x: 0.85
            text: root.msg
            halign: 'left'
            valign: 'middle'
            markup: True
            text_size: app.root.width, None
            size: self.texture_size
            font_size: '16sp'

<WidgetAbout@Popup>:
    size_hint: 0.9, 0.9
    title: 'About'
    BoxLayout:
        orientation: "vertical"
        RstDocument:
            source: 'docs/ABOUT.rst'
        MyButton:
            size_hint_y: 0.2
            height: '64dp'
            font_size: '24sp'
            text: 'OK'
            on_release: root.dismiss()

<WidgetHelp@Popup>:
    size_hint: 0.9, 0.9
    title: 'Help'
    BoxLayout:
        orientation: "vertical"
        RstDocument:
            source: 'docs/HELP.rst'
        MyButton:
            size_hint_y: 0.2
            height: '64dp'
            font_size: '24sp'
            text: 'OK'
            on_release: root.dismiss()

<WidgetCopy@Popup>:
    size_hint: 0.8, 0.8
    title: 'Copy Aphorism'
    textarea_copy: copytext
    BoxLayout:
        orientation: "vertical"
        FormLabel:
            size_hint_y: 0.2
            text: 'If the copy button fails, try to directly copy the text below.'
        FormTextArea:
            id: copytext
            size_hint_y: 0.6
            size: (self.parent.width, '72dp')
            markup: False
            focus: True
            font_name: 'assets/fonts/ubuntu/UbuntuMono-R.ttf'
        MyButton:
            size_hint_y: 0.2
            height: '64dp'
            font_size: '24sp'
            text: 'Copy'
            on_release: root.dismiss()
