#:kivy 1.8.0
#:import main main
#:import get_random_color kivy.utils.get_random_color
#:import ListItemButton kivy.uix.listview.ListItemButton
#:import ListAdapter kivy.adapters.listadapter.ListAdapter
#:import SimpleListAdapter kivy.adapters.simplelistadapter.SimpleListAdapter

<Label>:
    font_name: 'Ubuntu'

<Button>:
    font_name: 'Ubuntu'
    markup: True

<Main@MyScreenManager>:
    search_results: []
    backup_results: backup_results
    size_hint: 1, 1
    Screen:
        name: 'Main'
        Scatter:
            size_hint: (1, 1)
            auto_bring_to_front: False
            disabled: True
            MyImage:
                id: background
                pos: (0,0)
                auto_bring_to_front: False
                allow_stretch: True
        MyBoxLayout:
            ActionBarMain:
            FloatLayout:
                id: aphorism_container
                WidgetAphorism:
        FloatLayout:
            MyStackLayout:
                id: notifications
        FloatLayout:
            MyStackLayout:
                id: notifications_Main
    Screen:
        name: 'Search'
        MyBoxLayout:
            ActionBarMain:
            FormSearch:
                id: FormSearch
        FloatLayout:
            MyStackLayout:
                id: notifications_Search
    Screen:
        name: 'List'
        BoxLayout:
            orientation: "vertical"
            ActionBarMain:
            FormList:
                id: FormList
        FloatLayout:
            MyStackLayout:
                id: notifications_List
    Screen:
        name: 'Backup'
        backup_results: backup_results
        MyBoxLayout:
            ActionBarMain:
            MyButton:
                size_hint_y: 0.1
                text: 'Backup Database'
                font_size: '30sp'
                on_release: app.form_backup()
            MyButton:
                size_hint_y: 0.1
                text: 'Import (File)'
                font_size: '30sp'
                on_release: app.form_import()
            MyButton:
                size_hint_y: 0.1
                text: 'Import (URL)'
                font_size: '30sp'
                on_release: app.form_import_url()
            MyButton:
                size_hint_y: 0.1
                text: 'Download Backgrounds'
                font_size: '30sp'
                on_release: app.form_download_backgrounds()
            MyButton:
                size_hint_y: 0.1
                text: 'Wipe Database'
                font_size: '35sp'
                on_release: app.form_wipe()
            FormTextArea:
                size_hint_y: 0.5
                font_size: '14sp'
                font_name: 'assets/fonts/ubuntu/UbuntuMono-R.ttf'
                id: backup_results
                readonly: True
                allow_copy: True
                use_bubble: False
        FloatLayout:
            MyStackLayout:
                id: notifications_Backup
