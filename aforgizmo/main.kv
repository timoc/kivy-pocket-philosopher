#:kivy 1.8.0
#:import main main
#:import get_random_color kivy.utils.get_random_color
#:import ListItemButton kivy.uix.listview.ListItemButton
#:import ListAdapter kivy.adapters.listadapter.ListAdapter
#:import SimpleListAdapter kivy.adapters.simplelistadapter.SimpleListAdapter

<Label>:
    font_name: 'Ubuntu'

<Button>:
    font_name: 'Ubuntu'
    markup: True

<Main@MyScreenManager>:
    search_results: []
    backup_results: backup_results
    size_hint: 1, 1
    Screen:
        name: 'Main'
        MyBoxLayout:
            ActionBarMain:
            FloatLayout:
                id: aphorism_container
                WidgetAphorism:
    Screen:
        name: 'Search'
        MyBoxLayout:
            ActionBarMain:
            FormSearch:
                id: FormSearch
    Screen:
        name: 'List'
        BoxLayout:
            orientation: "vertical"
            ActionBarMain:
            FormList:
                id: FormList
    Screen:
        name: 'Backup'
        backup_results: backup_results
        MyBoxLayout:
            ActionBarMain:
            MyButton:
                size_hint_y: 0.1
                text: 'Backup'
                on_press: app.form_backup()
            MyButton:
                size_hint_y: 0.1
                text: 'Import'
                on_press: app.form_import()
            MyButton:
                size_hint_y: 0.1
                text: 'Wipe'
                on_press: app.form_wipe()
            FormTextArea:
                size_hint_y: 0.7
                id: backup_results
                readonly: True
                allow_copy: False
                use_bubble: False
