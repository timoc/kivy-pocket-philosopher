#:kivy 1.8.0
#:import main main
#:import get_random_color kivy.utils.get_random_color
#:import ListItemButton kivy.uix.listview.ListItemButton
#:import ListAdapter kivy.adapters.listadapter.ListAdapter
#:import SimpleListAdapter kivy.adapters.simplelistadapter.SimpleListAdapter

<Label>:
    font_name: 'Ubuntu'

<Button>:
    font_name: 'Ubuntu'
    markup: True

<Main>:
    search_results: []
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        MyScreenManager:
            size_hint: 1, 1
            id: Screens
            Screen:
                name: 'Main'
                BoxLayout:
                    orientation: "vertical"
                    ActionBarMain:
                    BoxLayout:
                        id: aphorism_container
                        orientation: "vertical"
                        WidgetAphorism:
                    MyButton:
                        size_hint_y: None
                        height: '64dp'
                        text: 'Random'
                        on_press: root.aphorism_random_display()
            Screen:
                name: 'Search'
                orientation: "vertical"
                BoxLayout:
                    orientation: "vertical"
                    ActionBarMain:
                    FormSearch:
                        id: FormSearch
            Screen:
                name: 'List'
                BoxLayout:
                    orientation: "vertical"
                    ActionBarMain:
                    FormList:
                        id: FormList
