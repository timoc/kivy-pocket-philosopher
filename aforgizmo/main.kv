#:kivy 1.8.0
#:import main main
#:import get_random_color kivy.utils.get_random_color
#:import ListItemButton kivy.uix.listview.ListItemButton
#:import ListAdapter kivy.adapters.listadapter.ListAdapter
#:import SimpleListAdapter kivy.adapters.simplelistadapter.SimpleListAdapter

<Label>:
    font_name: 'Ubuntu'

<Button>:
    font_name: 'Ubuntu'
    markup: True

<Main>:
    search_results: []
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        MyScreenManager:
            size_hint: 1, 1
            id: Screens
            Screen:
                name: 'Main'
                MyBoxLayout:
                    ActionBarMain:
                    MyBoxLayout:
                        id: aphorism_container
                        WidgetAphorism:
                    MyBoxLayout:
                        orientation: "horizontal"
                        size_hint_y: 0.1
                        MyButton:
                            size_hint_x: 0.7
                            height: '64dp'
                            text: 'Random'
                            on_press: root.aphorism_random_display()
                        MyButton:
                            size_hint_x: 0.3
                            height: '64dp'
                            text: 'Copy'
                            on_press: app.copy()
            Screen:
                name: 'Search'
                MyBoxLayout:
                    ActionBarMain:
                    FormSearch:
                        id: FormSearch
            Screen:
                name: 'List'
                BoxLayout:
                    orientation: "vertical"
                    ActionBarMain:
                    FormList:
                        id: FormList
