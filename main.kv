#:kivy 1.8.0

<DynButton@Button>:
    font_size: self.parent.height / 3.5
    markup: True

<MainScreen>:
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            Scatter:
                auto_bring_to_front: False
                Image:
                    id: bg
                    width: root.width
                    height: root.height
            Scatter:
                Label:
                    id: aphorism
                    width: self.parent.width
                    height: self.parent.height
                    font_size: self.parent.height / 20
                    markup: True
                    text_size: self.size
                    text: 'Press the Button!'

        BoxLayout:
            size_hint_y: 0.1
            DynButton:
                id: btn_random
                on_press: root.btn_random()
                text: "Random"
            DynButton:
                id: btn_settings
                on_press: app.open_settings()
                text: "Settings"
            DynButton:
                id: btn_test
                on_press: root.SwitchScreen('Test')
                text: 'Test'

<TestScreen>:
    BoxLayout:
        Button:
            text: 'Back'
            on_press: root.SwitchScreen('Main')
