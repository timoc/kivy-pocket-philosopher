#:kivy 1.8.0

<MainWindow>:
    orientation: "vertical"
    font_path: ''
    author_font: ''
    quote_font:  ''
    quote_format: ''
    quote_text: label_text
    button_random: btn_random
    background_image: bg_image

    ScatterLayout:
        auto_bring_to_front: False
        Image:
            id: bg_image
        Label:
            id: label_text
            font_size: self.parent.height / 15
            markup: True
            text_size: self.size
            text: 'Press the Button!'

    BoxLayout:
        size_hint_y: 0.1
        Button:
            id: btn_random
            on_press: root.button_random_press('random')
            font_size: self.parent.height / 3
            text: "Random Aphorism"
        Button:
            text: "Settings"
            on_press: app.open_settings()
