<DynButton@Button>:
    font_size: self.height / 3.5
    markup: True

<MainScreen>:
    BoxLayout:
        orientation: "vertical"

        RelativeLayout:
            auto_bring_to_front: False
            Image:
                id: bg
                width: root.width
                height: root.height
            Scatter:
                center: self.parent.center
                size_hint: None, None
                size: aphorism.size
                Label:
                    id: aphorism
                    font_size: 50
                    markup: True
                    text: 'Press the Button!'
                    text_size: root.width, None
                    size_hint_y: None
                    size: self.texture_size

        BoxLayout:
            size_hint_y: 0.1
            DynButton:
                id: btn_random
                on_press: root.btn_random()
                text: "Random"
            DynButton:
                id: btn_settings
                on_press: app.open_settings()
                text: "Settings"
            DynButton:
                id: btn_test
                on_press: root.SwitchScreen(screen = 'Test')
                text: 'Test'

<TestScreen>:
    BoxLayout:
        Button:
            text: 'Back'
            on_press: root.SwitchScreen(screen = 'Main')
